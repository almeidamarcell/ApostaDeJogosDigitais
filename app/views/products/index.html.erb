<h1>Lista</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Jogo</th>
      <th>Equipes & Data </th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.date %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td>
          <% if user_signed_in? %> 
            <%= link_to 'Editar', edit_product_path(product), :class => 'btn btn-mini' %>
            <%= link_to 'Excluir', product_path(product), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_product_path, :class => 'btn btn-primary' %>